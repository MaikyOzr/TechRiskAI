{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "out",
        "rootDir": "src",
        "allowJs": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/electron/**/*",
        "src/ai/**/*"
    ]
}