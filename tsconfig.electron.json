{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "out/electron",
        "rootDir": "src/electron",
        "allowJs": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/electron/**/*"
    ]
}